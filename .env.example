# Finnhub: get key at https://finnhub.io (free tier)
FINNHUB_API_KEY=your_finnhub_api_key

# Kafka (use kafka:29092 from containers, localhost:9092 from host)
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# Tickers to subscribe to (comma-separated; max 50 on free tier)
TICKERS=AAPL,TSLA,MSFT,AMZN,BTC-USD

# Redis
REDIS_URL=redis://localhost:6379/0

# PostgreSQL (use postgres:5432 from containers)
DATABASE_URL=postgresql://stock:stock@localhost:5432/stock_analytics
# Async driver for FastAPI
DATABASE_URL_ASYNC=postgresql+asyncpg://stock:stock@localhost:5432/stock_analytics

# API base URL (for frontend)
VITE_API_URL=http://localhost:8000
